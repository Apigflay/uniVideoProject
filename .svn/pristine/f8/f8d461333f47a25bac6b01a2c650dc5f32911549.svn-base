<script type="text/javascript">
    var scale = $(window).width() / 640;
    $('html').css('font-size', 120 * scale + '%');

    function showDialog(obj) {
        //inroom=1 判断当前是否有充值咨询在播，如果有进入房间，没有则打开弹层
        if (getPar("inroom") == "1") {
            if (navigator.userAgent.match(/(iPhone|iPod|iPad);?/i)) {
                obj.setAttribute("href", "miaobowpa:/EnterAgentRoom");
            }
            else if (navigator.userAgent.indexOf('Android') > -1 || navigator.userAgent.indexOf('Adr') > -1) {
                obj.setAttribute("href", "javascript:android.enterAgentRoom()");
            }
        } else {
            showLayer();
        }
    }

    //没有客户妹妹在播是打开微信联系客服
    function showLayer() {
        $(".animation_box").css('display', 'none');
        //下面的两句是为了防止底部页面滑动。注：必须对html和body都设置overflow:hidden，移动端才能禁止滑动
        $("body,html").css('overflow', 'hidden');

        var html = $("#pay").html();
        layer.open({
            type: 1,
            content: html,
            shadeClose: false//是否触摸遮罩层关闭
        });
    }
    //窗口关闭时动画显示以及body和html的overflow还原；
    function closeDialog() {
        layer.closeAll();
        $(".animation_box").css('display', 'block');
        $("body,html").css('overflow', 'auto');
    }

    function getPar(name) {
        var reg = new RegExp("(^|\\?|&)" + name + "=([^&]*)(\\s|&|$)", "i");
        if (reg.test(location.href))
            return decodeURIComponent(RegExp.$2.replace(/\+/g, " "));
        return "";
    }

    $(function () {
        //layer:0 弹出层  1 全屏
        if (getPar("layer") == "1") {
            //showLayer();
            document.title = "充值";
            $("#privilege").hide();
            $("#pay").show();
            $(".get_up").addClass("get_up_full");
            $(".get_up .tips .arrow").css('left', '22.6rem');

        }
        else if (getPar("layer") == "0") {
            showLayer();
        }
        
        //我的特权下面紧跟着特权说明
        $("#myprivilege").after($("#privilege" + @ViewBag.Level));
    });
</script>
