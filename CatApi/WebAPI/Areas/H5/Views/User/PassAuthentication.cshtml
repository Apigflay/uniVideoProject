    }

    body {
        background: #F2F2F2;
    }


    .banner {
        width: 90%;
        margin-left: 5%;
        background: #FFFFFF;
        border-radius: 5px;
        margin-top: -0.6rem;
    }

        .banner p {
            color: #000000;
            padding: 8% 1% 4% 8%;
        }

    .bottom {
        width: 80%;
        margin-left: 10%;
        /* text-align: center; */
        border-bottom: 1px solid #DDDDDD;
    }

    .p1 {
        margin-left: -5%;
        color: #777777 !important;
        font-size: 1.2rem;
        text-align: center;
        font-size: 1.5rem;
    }

    .btn {
        background-image: linear-gradient(to right,#FF6941,#FF19A6);
        width: 9.2rem;
        height: 1.3rem;
        display: inline-block;
        margin: 0.4rem;
        color: #FFF;
        text-align: center;
