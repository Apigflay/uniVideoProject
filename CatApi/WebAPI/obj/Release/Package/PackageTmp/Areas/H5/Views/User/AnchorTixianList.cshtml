@{
    ViewBag.Title = "提现记录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@using model;
@{ 
    ViewData["data"]
}*@
<style>


    body {
        background: #F2F2F2;
        margin:0;
    }
    /*.list {
        padding-top: 1.1rem;
    }*/
    .p1 {
        width: 90%;
        background: #FF7B10;
        color: white;
        line-height: 3.1rem;
        margin-left: 5%;
    }
    .p2 {
        width: 90%;
        background: white;
        line-height: 3.1rem;
        margin-left: 5%;
        margin-top: -1rem;
    }
    .spleft {
        padding-left: 1.5rem;
        font-size: 1rem;
    }
    .spright {
        font-size: 1rem;
        float: right;
        padding-right: 1.5rem;
    }
    .spleft2 {
        padding-left: 1.5rem;
        font-size: 1.2rem;
    }
    .spleft2-1 {
        font-size: 1.2rem;
        color: #FF7B10;
    }
    .spright2 {
        font-size: 1.0rem;
        float: right;
        padding-right: 1.5rem;
    }
    .spright2-1 {
        font-size: 1.0rem;
        color: #FF7B10;
    }
</style>
<div class="banner">
    @using Model;
    @{
            List<AnchorTixianList> info = ViewData["data"] as List<AnchorTixianList>;
            if (info.Count > 0)
            {
                foreach (AnchorTixianList item in info)
                {
                    <div class="list">
                        <p class="p1"><span class="spleft">提现时间</span><span class="spright">@item.idate</span></p>
                        <p class="p2"><span class="spleft2">提现金额: <span class="spleft2-1">@(double.Parse(item.amount.ToString()) * 100)</span> 蜜币</span> @*<span class="spright2">可得: <span class="spright2-1">@item.amount</span> HK$</span>*@</p>
                    </div>
                }
            }
            else
            {
                <p style="text-align:center">暂无数据</p>
            }
    }
</div>


